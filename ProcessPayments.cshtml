@model IEnumerable<FourthWallCafe.MVC.Models.PaymentType>
@{
    ViewData["Title"] = "Process Payment";
}

<h1>Process Payment</h1>

<form asp-action="SubmitPayment" method="post">
    <input type="hidden" name="orderId" value="@ViewBag.OrderId" />

    <div class="form-group">
        <label for="PaymentTypeId">Payment Type</label>
        <select id="PaymentTypeId" name="paymentTypeId" class="form-control"> <!-- Fix casing -->
            @foreach (var paymentType in Model)
            {
                <option value="@paymentType.PaymentTypeID">@paymentType.PaymentTypeName</option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="CardNumber">Card Number</label>
        <input type="text" id="CardNumber" name="cardNumber" class="form-control" placeholder="Enter Card Number" />
    </div>

    <div class="form-group">
        <label for="ExpirationDate">Expiration Date</label>
        <input type="text" id="ExpirationDate" name="expirationDate" class="form-control" placeholder="MM/YY" />
    </div>

    <div class="form-group">
        <label for="CVV">CVV</label>
        <input type="text" id="CVV" name="cvv" class="form-control" placeholder="Enter CVV" />
    </div>

    <button type="submit" class="btn btn-danger">Process Payment</button>
    <a href="@Url.Action("OrderDetails", "Cafe", new { id = ViewBag.OrderId })" class="btn btn-secondary">Cancel</a>
</form>